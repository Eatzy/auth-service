# Server Configuration
PORT=3001
NODE_ENV=development

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3001  # Will be https://eatzy-auth.intern.eatzy.com in staging

# API Service Configuration (Eatzy API)
API_SERVICE_URL=http://api.eatsy.local
API_SERVICE_TOKEN=your-api-service-shared-secret  # Shared secret for auth-service â†” API communication

# Database Configuration (individual parameters - no DATABASE_URL to avoid SSL issues)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=auth_service

# SSL Configuration for Production (same pattern as kudoz-backend)
# DB_CA_CERT should contain the certificate content, not file path
# Leave empty for no CA certificate
DB_SSL=false
DB_CA_CERT=
DB_SSL_REJECT_UNAUTHORIZED=true

# Social Authentication (Optional - leave empty to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# API Integration
API_SERVICE_URL=http://api.eatsy.local
SERVICES_SECRET_KEY=local-services-secret-eatzy-2024