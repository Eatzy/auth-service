{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication Service with Better Auth",
  "author": "Eatzy",
  "repository": "eatzy/auth-service",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts | pino-pretty",
    "build": "bun tsup",
    "start": "bun dist/index.js",
    "clean": "rimraf dist coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "test": "vitest run",
    "db:migrate": "bun drizzle-kit migrate",
    "db:generate": "bun drizzle-kit generate",
    "db:push": "bun drizzle-kit push",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "better-auth": "^1.0.1",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.3",
    "envalid": "^8.0.0",
    "hono": "^4.6.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.5",
    "zod": "^3.25.1"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.6",
    "@biomejs/biome": "1.9.4",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.20.3",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "tsup": {
    "entry": ["src", "!src/**/__tests__/**", "!src/**/*.test.*"],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
